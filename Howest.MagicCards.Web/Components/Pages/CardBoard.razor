@using Howest.MagicCards.Shared.DTO

<ul class="card-list">
    @foreach (CardReadDTO card in Cards)
    {
        <li>
            @if (String.IsNullOrEmpty(card.ImageUrl))
            {
                <p>No Image found</p>

            }
            else
            {
                <img src="@card.ImageUrl" alt="Card Image" />
            }
        </li>
    }

</ul>


<style>
    .card-list {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
        list-style-type: none;
        padding: 0 1rem;
        gap: 2rem;
        margin: 0;
    }

    .card-list li {
        width: 20%;
    }

    .card-list li img {
        width: 100%;
        cursor: pointer;
    }
</style>